@startuml
left to right direction

actor "Администратор" as Admin
actor "Мастер" as Master
actor "Пользователь" as User

rectangle "Система" {
  usecase "Авторизация Админа" as AuthAdmin
  usecase "Авторизация Мастера" as AuthMaster
  usecase "Авторизация Пользователя" as AuthUser

  usecase "Управление мастерами" as ManageMasters
  usecase "Добавить мастера" as AddMaster
  usecase "Удалить мастера" as RemoveMaster
  usecase "Контроль выполнения заказов" as MonitorOrders
  
  usecase "Изменение статуса" as ProcessOrders
  
  usecase "Оформить заявку на ремонт" as CreateOrder
  usecase "Просмотр статуса своих заказов" as CheckOrder

  usecase "Выполнено" as Complited
  usecase "Отказано" as Nocomp
  usecase "В работе" as inwork
}

Admin --> AuthAdmin
AuthAdmin --> ManageMasters
AuthAdmin --> MonitorOrders

ManageMasters --> AddMaster
ManageMasters --> RemoveMaster

Master --> AuthMaster
AuthMaster --> ProcessOrders

ProcessOrders -- Complited : extend
ProcessOrders -- Nocomp : extend
ProcessOrders -- inwork : extend
User --> AuthUser
AuthUser --> CreateOrder
AuthUser --> CheckOrder
@enduml
